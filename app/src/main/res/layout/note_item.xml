<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constRoot"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tvTitleItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Title"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/iDeleteItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDescriptionItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/tvTitleItem"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/tvTitleItem"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleItem" />

        <TextView
            android:id="@+id/tvDateItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Date"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/tvDescriptionItem"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/tvDescriptionItem"
            app:layout_constraintTop_toBottomOf="@+id/tvDescriptionItem" />

        <ImageView
            android:id="@+id/iDeleteItem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitleItem"
            app:srcCompat="@drawable/icons8_delete_64" />

        <ImageView
            android:id="@+id/ivEditItem"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/iDeleteItem"
            app:layout_constraintTop_toBottomOf="@+id/iDeleteItem"
            app:srcCompat="@drawable/icons8_edit_64" />

        <ImageView
            android:id="@+id/ivImpotentItem"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ivEditItem"
            app:layout_constraintStart_toStartOf="@+id/ivEditItem"
            app:layout_constraintTop_toBottomOf="@+id/ivEditItem"
            app:srcCompat="@drawable/icons8_impotent_64" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>